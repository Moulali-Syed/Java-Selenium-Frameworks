package org.selenium.pom.utils;

import org.selenium.pom.objects.BillingAddress;

import com.fasterxml.jackson.core.JsonProcessingException;
import com.fasterxml.jackson.databind.JsonMappingException;
import com.fasterxml.jackson.databind.ObjectMapper;

//this class  will return the java object
public class JacksonUtils {

	public BillingAddress deserialization(String filePath,BillingAddress billingAddress) throws JsonMappingException, JsonProcessingException {
		
		//create object of ObjectMapper
		ObjectMapper objectMapper = new ObjectMapper();
		//then use the readValue method that takes 2 arguments filePath of json file and object of the class
		return objectMapper.readValue(filePath, billingAddress.getClass());
		
		
	}
}
